@model sistema_academia.Models.Plano

@{
    ViewData["Title"] = "Sistema de Controle de Academia - Cadastro de planos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12 col-md-12">
           <div class="box box-primary">
            <div class="box-header  with-border">
                <h3 class="box-title">Cadastrar plano</h3>
            </div>

            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="nome" class="control-label"></label>
                            <input asp-for="nome" class="form-control" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label asp-for="formaPagamento" class="control-label"></label>                        
                            <select name="formaPagamento" asp-for="formaPagamento" class="form-control">
                                <option value=""></option>
                                <option value="1">Dinheiro</option>
                                <option value="2">Cartão de crédito</option>
                                <option value="3">Cartão de débito</option>
                                <option value="4">Cheque</option>
                                <option value="5">Boleto</option>
                            </select>
                            <span asp-validation-for="formaPagamento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label asp-for="valor" class="control-label"></label>
                            <input asp-for="valor" class="form-control" />
                            <span asp-validation-for="valor" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label asp-for="observacao" class="control-label"></label>
                            <textarea asp-for="observacao" class="form-control"></textarea>
                            <span asp-validation-for="observacao" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        
                        <div class="form-group">
                            <div class="col-lg-12">
                                <br />
                                <p>
                                 &nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" value="Cadastrar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                
                                
                            </div>
                            <br />
                        </div>
                    </div>

            </form>
        </div>
    </div>
    
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
