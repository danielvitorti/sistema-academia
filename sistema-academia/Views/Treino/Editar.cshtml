@model sistema_academia.Models.Treino

@{
    ViewData["Title"] = "SysAcad - Editar treino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
<div class="row">
    <div class="col-md-12 col-xs-12 col-lg-12 col-md-12">
        <div class="box box-primary">
            <div class="box-header  with-border">
                <h3 class="box-title">Editar treino</h3>
            </div>
        <form asp-action="Editar">
            <div class="col-lg-12">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            
            </div>
            <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="objetivo" class="control-label"></label>
                <textarea asp-for="objetivo" class="form-control" ></textarea>
                <span asp-validation-for="objetivo" class="text-danger"></span>
            </div>
            </div>

            <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="observacao" class="control-label"></label>
                <textarea asp-for="observacao" class="form-control"></textarea>
                <span asp-validation-for="observacao" class="text-danger"></span>
            </div>
            </div>
           
          
       <div class="row">
           <div class="col-lg-12">
               <p>
            <div class="form-group">
               &nbsp;&nbsp;&nbsp;&nbsp; <input type="submit" value="Editar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-default">Cancelar</a>
            </div>
            </p>
            </div>
        </div>
        </form>
    </div>
</div>

</div>
</div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
