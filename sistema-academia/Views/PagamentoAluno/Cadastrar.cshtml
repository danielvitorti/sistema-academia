@model sistema_academia.Models.PagamentoAluno

@{
    ViewData["Title"] = "SysAcad - Lançar pagamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-xs-12 col-md-12">
           <div class="box box-primary">
            <div class="box-header  with-border">
                <h3 class="box-title">Lançar pagamentos</h3>
            </div>

        <form asp-action="Create">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <label asp-for="Aluno" class="control-label"></label>
                    <select name="cmbAluno" class="form-control select2" id="cmbAluno"></select>
                    <span asp-validation-for="Aluno" class="text-danger"></span>
                    <input name="descaluno" type="hidden" id="descaluno" value="" />
            		<input asp-for="Aluno" id="aluno" type="hidden" value="" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <label asp-for="Plano" class="control-label"></label>
                    <select name="cmbPlano"  class="form-control select2" id="cmbPlano"></select>
                    <span asp-validation-for="Plano" class="text-danger"></span>
                    <!--<input name="descplano" type="text" id="descplano" value="" class="form-control" /> -->
            		<input asp-for="Plano" id="plano" type="hidden" value="" />

                </div>
            </div>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <label asp-for="descricao" class="control-label"></label>
                    <input asp-for="descricao" class="form-control" />
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <label asp-for="valor" class="control-label"></label>
                    <input asp-for="valor" class="form-control money2" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <label asp-for="tipoPagamento" class="control-label"></label>                    
                    <select asp-for="tipoPagamento" class="form-control">
                        <option value=""></option>
                        <option value="1">Pagamento completo</option>
                        <option value="2">Pagamento parcial</option>
                    </select>
                    <span asp-validation-for="tipoPagamento" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                        
                        <div class="form-group">
                            <div class="col-lg-12">
                                <br />
                                <p>
                                 &nbsp;&nbsp;&nbsp;&nbsp;<input type="submit" value="Lançar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                
                                
                            </div>
                            <br />
                        </div>
            </div>

        </form>
    </div>
</div>


</div>
</div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
