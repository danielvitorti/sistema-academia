@model IEnumerable<sistema_academia.Models.PlanoAluno>

@{
    ViewData["Title"] = "SysAcad - Cadastro de planos por alunos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content-header">
    <h3>Planos por alunos</h3>
</section>


<section class="content container-fluid">
    

<div class="row">
    <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12">
        
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Pesquisar</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
              <div class="box-body">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">Nome</label>

                  <div class="col-sm-10">
                    <input type="text" name="filtro" class="form-control" />
                  </div>
                </div>
               
               
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <a asp-action="Cadastrar" class="btn btn-default"><i class="fa fa-user-plus"></i>Cadastrar novo plano por aluno</a>
                <button type="submit" class="btn btn-info pull-right" name="btnBuscar" id="btnBuscar" value="Buscar"><i class="fa fa-search"></i>Buscar</button>
              </div>
              <!-- /.box-footer -->
            </form>
          
          <!-- /.box -->
    </div>
</div>

<section class="content">
 <div class="row">
        <div class="col-lg-12 col-xs-12 col-md-12 col-sm-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Planos por alunos cadastrados</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Aluno</th>
            <th>Plano</th>
            <th>
                @Html.DisplayNameFor(model => model.dataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plano.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataCadastro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
</div>
</div>
</div>
</div>
</section>